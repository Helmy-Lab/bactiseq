{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sylvia's pipeline - params.input schema",
  "description": "Schema for the samplesheet.csv input",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "sample": {
        "type": "string",
        "pattern": "^\\S+$",
        "errorMessage": "Sample name must be provided and cannot contain spaces",
        "meta": ["id"]
      },
      "short_fastq1": {
        "type": "string",
        "pattern": "^(\\S+\\.f(ast)?q\\.gz|short1NA)$",
        "default": "short1NA"
      },
      "short_fastq2": {
        "type": "string", 
        "pattern": "^(\\S+\\.f(ast)?q\\.gz|short2NA)$",
        "default": "short2NA"
      },
      "long_fastq": {
        "type": "string",
        "pattern": "^(\\S+\\.f(ast)?q\\.gz|longNA)$",
        "default": "longNA"
      },
      "assembly": {
        "type": "string",
        "pattern": "^(\\S+\\.(fasta|fa|gbk?|gbff|genbank|embl|gff|gff3?)|assemblyNA)$",
        "default": "assemblyNA"
      },
      "polish": {
        "type": "string",
        "pattern": "^(short|long|NA)$",
        "default": "NA",
        "meta": ["polish"]
      },
      "ONT_basecaller": {
        "type": "string",
        "default": "NA",
        "meta": ["basecaller"]
      }
    },
    "required": ["sample"],
    "oneOf": [
      {
        "description": "Hybrid assembly: short + long reads or polishing with short mayve",
        "properties": {
          "short_fastq1": { "not": { "const": "short1NA" } },
          "long_fastq": { "not": { "const": "longNA" } },
          "assembly": { "const": "assemblyNA" }
        },
        "required": ["sample", "short_fastq1", "long_fastq"]
      },
      {
        "description": "Illumina-only assembly", 
        "properties": {
          "short_fastq1": { "not": { "const": "short1NA" } },
          "short_fastq2": { "not": { "const": "short2NA" } },
          "assembly": { "const": "assemblyNA" },
          "long_fastq": { "const": "longNA" }
        },
        "required": ["sample", "short_fastq1", "short_fastq2"]
      },
      {
        "description": "Long-read-only assembly",
        "properties": {
          "long_fastq": { "not": { "const": "longNA" } },
          "assembly": { "const": "assemblyNA" },
          "short_fastq1": { "const": "short1NA" },
          "short_fastq2": { "const": "short2NA" }
        },
        "required": ["sample", "long_fastq"]
      },
      {
        "description": "Pre-assembled input",
        "properties": {
          "assembly": { "not": { "const": "assemblyNA" } },
          "short_fastq1": { "const": "short1NA" },
          "short_fastq2": { "const": "short2NA" },
          "long_fastq": { "const": "longNA" }
        },
        "required": ["sample", "assembly"]
      }
    ],
    "errorMessage": {
      "oneOf": "Invalid input combination. Choose: 1) short+long reads, 2) paired-end short reads, 3) long reads only, or 4) pre-assembled genome"
    }
  }
}